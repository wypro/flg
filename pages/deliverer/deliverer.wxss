/* pages/center/center.wxss */
page{
  width: 100%;
  height: 100%;
}
.center{
  background-color: #F8F9F9;
  width: 100%;
  height: 100%;
  z-index: 100;
  position: fixed;
}

.login-box{
  background-color: #fff;
}
.no-login{
  display: flex;
  justify-content: space-between;
  width: 95%;
  margin: 0 auto;
  padding: 30px 0;
}

.no-login-btn{
  font-size: 1.2rem;
  line-height: 40px;
}
.no-login-btn-txt{
  font-size: .9rem;
  font-weight: 300;
  color: #666;
}

.no-login-logo{
  width: 60px;
  height: 60px;
  border-radius: 50%;
  overflow: hidden;
}
.no-login-logo image{
  width: 100%;
  height: 100%;
}

/* --- --- */
.center-content{
  margin-top: 8px;
  width: 100%;
  background-color: #fff;
}
.center-item{
  border-bottom: 1rpx solid #E9EAEC;
}
.center-item:last-of-type{
  border: 0;
}
.center-item>view{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 90%;
  margin: 0 auto;
}
.center-item>view>view{
  display: flex;
  align-items: center;
}

.center-txt{
  line-height: 55px;
  font-size: .87rem;
  font-weight: 300;
  margin-left: 15px;
}

.center-img{
  width: 28px;
  height: 28px;
}

.center-icon{
  width: 12px;
  height: 12px;
}

.change-recruit{
  line-height: 45px;
  background-color: #fff;
  font-size: .9rem;
  text-align: center;
  margin-top: 8px;
}


.login-out{
  text-align: center;
  line-height: 60px;
  color: #B6B6B6;
  font-size: .87rem;
}
