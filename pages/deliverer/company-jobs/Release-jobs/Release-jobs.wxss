view {
  box-sizing: unset;
  padding: 0;
  margin: 0;
}

.ms {
  width: 100%;
  line-height: 30px;
  padding-left: 25px;
  font-size: 12px;
  color: darkgray;
  padding-top: 10px;
  padding-bottom: 10px;
  background-color: rgb(245, 245, 245);
}

.info {
  width: 100%;
  height: 100%;
  line-height: 40px;
  margin: 0 auto;
  font-size: 14px;
  color: black;
}

.info>view {
  width: 100%;
  flex-direction: row;
  display: flex;
  margin: 0 auto;
  border-bottom: 1px solid rgb(245, 245, 250);
}

.info>view>view {
  width: 55%;
  padding-left: 25px;
}

.info>view>input {
  width: 38%;
  padding-top: 8px;
  margin: 0;
  text-align: right;
  align-items: center;
  margin-right: 25px;
}

.info>view>label {
  width: 38%;
  margin: 0;
  text-align: right;
  color: darkgray;
}

.info-ms {
  flex: 5;
  height: 80rpx;
  line-height: 80rpx;
  border: solid 2rpx #ccc;
  border-radius: 50rpx;
  font-size: 28rpx;
}

.ms-two {
  display: flex;
}

.ms-two>text {
  flex: 1;
  font-size: 50rpx;
}

.center-icon {
  width: 14px;
  height: 14px;
  margin: 0 5px;
  padding: 0;
}

.piker {
  color: black;
  margin-bottom: 4px;
}

.btn {
  width: 85%;
  margin: 0 auto;
  margin-top: 20px;
  margin-bottom: 50px;
  background-color: #2bc998;
  color: white;
  position: relative;
}

.company-content{
  width: 345px;
  overflow-wrap: break-word;
  padding-left: 25px; 
  line-height: 18px;
}
.clear-icon {
  width: 30px;
  height: 30px;
  margin: 0 5px;
  z-index: 2;
}
/* popoup */

.pop-head {
  text-align: center;
  font-weight: 800;
  font-size: 38rpx;
  margin: 40rpx;
}

.pop-content {
  margin: 0rpx 30rpx;
  font-size: 34rpx;
  color: #666;
  height: 300rpx;
}

.pop-content>textarea {
  width: 345px;
}

.pop-foot {
  font-size: 36rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  background-color: #fe9036;
  margin-top: 30rpx;
}

