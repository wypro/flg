/* pages/tips/tips.wxss */

.tips-title image{
  width: 100%;
  height: 120px;
  display: block;
}
.tips-title-txt{
  background-color: #F8F8F9;
  height: 34px;
  line-height: 34px;
  text-align: center;
  font-size: .75rem;
  color: #9E9E9E;
}
.tips-title-txt text{
  color: #2BC998;
  margin-left: 7px;
}

.tips-border{
  border-bottom: 1rpx solid #eee;
  transition: .3s;
}
.tips-list{
  width: 95%;
  display: flex;
  padding: 20px 0px;
  margin: 0 auto;
  background-color: #fff;
}
.tips-left-img{
  min-width: 26px;
  max-width: 26px;
  min-height: 26px;
  max-height: 26px;
  background-color: #ccc;
  border-radius: 18px;
  text-align: center;
  line-height: 26px;
  color: #fff;
  font-size: .87rem;
  margin: 0px 10px 0px 7px;
}
.num-img01{
  background-color: #F66952;
}
.num-img11{
  background-color: #F69D55;
}
.num-img21{
  background-color: #F7D659;
}
.tips-item{
  width: 100%;
  margin: 0 auto;
}
.tips-info{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.tips-compay-name{
  font-size: 1.05rem;
  font-weight: 500;
}
.tips-company-about{
  font-size: .75rem;
  color: #9E9E9E;
  line-height: 30px;
}
.tips-info image{
  width: 50px;
  height: 50px;
  margin-right: 5px;
}
.tips-user-info{
  width: 100%;
  display: flex;
  align-items: center;
  margin-top: 10px;
}
.hr-img{
  width: 30px;
  height: 30px;
  border-radius: 15px;
  margin: 0 8px;
}
.hr-name{
  font-size: .82rem;
  color: #333;
}
.exposure{
  font-size: .67rem;
  padding: 4px 5px;
  margin: 0 3px;
  background-color: #FEF0EC;
  color: #FF7958;
}