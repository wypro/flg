page{
  width: 100%;
  height: 100%;
}
.login-other-box{
  width: 100%;
  height: 100%;
}
.login-title{
  margin: 0 auto;
  padding: 25px 0;
  width: 90%;
  font-size: 1.1rem;
  font-weight: 800;
}
.login-info{
  margin: 0 auto;
  margin-top: 5px;
  width: 90%;
}

.login-row input{
  height: 50px;
}
.login-border{
  border-bottom: 1rpx solid #ccc;
}


.input-color{
  color: #ccc;
}
.login{
  margin: 0 auto;
  margin-top: 40px;
  width: 90%;
  height: 50px;
  text-align: center;
  line-height: 50px;
  background-color: #2BC998;
  color: #fff;
}

.login-type{
  width: 80px;
  font-size: 15px;
  position: absolute;
  left: 5%;
  bottom: 25px;
  color: #2BC998;
}