/* component/senior/popup/popup.wxss */
.component {
  background-color: rgba(0, 0, 0, 0.52);
  position: fixed;
  z-index: 100000;
  display: inline-flex;
}
.animated {
  animation-duration: 280ms;
  animation-fill-mode: both;
}
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
@keyframes fadeOut {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}
.content {
  width: 750rpx;
  position: absolute;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  transition: transform 300ms;
  opacity: 1;
}
.slot {
  width: 100%;
}
