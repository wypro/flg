/* pages/components/login-tel/login-tel.wxss */
page{
  width: 100%;
  height: 100%;
}
.login-other-box{
  width: 100%;
  height: 100%;
}
.login-title{
  margin: 0 auto;
  padding: 25px 0;
  width: 90%;
  font-size: 1.1rem;
  font-weight: 800;
}
.login-info{
  margin: 0 auto;
  margin-top: 5px;
  width: 90%;
}
.login-xy{
  margin: 0 auto;
  font-size: 12px;
  color: darkgray;
  margin-top: 10px;
  width: 90%;
}
.login-xy label{
  color: black;
}
.login-row label{
  font-size: 14px;
  line-height: 50px;
  color: dimgray;
  
}
.login-row input{
  height: 50px;
  width: 75%;
}
.login-border{
  border-bottom: 1rpx solid #ccc;
}
.input-color{
  color: #ccc;
}
.login{
  margin: 0 auto;
  margin-top: 40px;
  width: 90%;
  height: 50px;
  text-align: center;
  line-height: 50px;
  background-color: #2BC998;
  color: #fff;
}

.login-type{
  width: 80px;
  font-size: 15px;
  position: absolute;
  left: 5%;
  bottom: 25px;
  color: #2BC998;
}
.login-code{
  float: left;
}