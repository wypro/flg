/* 登录对话框 */
.login-module{
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.5);
  position: fixed;
  z-index: 999;
}
.login-module-box{
  width: 76%;
  height: 240px;
  background-color: #fff;
  position: absolute;
  top: 50%;
  margin-top: -120px;
  left: 12%;
  border-radius: 3px;
}
.login-module-close{
  width: 25px;
  height: 25px;
  position: absolute;
  top: 5px;
  right: 5px;
}
.login-module-close image{
  width: 100%;
  height: 100%;
}
.login-module-title{
  line-height: 67px;
  text-align: center;
  font-size: 1.1rem;
}

.login-mode{
  width: 85%;
  height: 40px;
  margin: 0 auto;
  text-align: center;
  font-size: .9rem;
  line-height: 40px;
  border-radius: 3px;
}
.login-module-wx{
  background-color: #19AC18;
  color: #fff;
}
.login-module-tel{
  border: 1rpx solid #666;
  background-color: #F7F7F7;
  margin-top: 15px;
}
.login-module-other{
  line-height: 70px;
  text-align: center;
  font-size: .78rem;
  color: #7E7E7E;
}