/* pages/components/position/position.wxss */
.position-item{
  display: flex;
  width: 90%;
  margin: 0 auto;
  align-items: center;
  border-bottom: 1rpx solid #ccc;
}
.company-logo{
  min-width: 70px;
  max-width: 70px;
  height: 70px;
  overflow: hidden;
  margin: 10px 10px 10px 0;
}
.company-logo image{
  width: 100%;
  height: 100%;
}
.position-info{
  display: flex;
  justify-content: space-between;
  font-size: .8rem;
  width: 100%;
  flex: 1;
}
.position-name{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.company-name{
  font-size: .75rem;
  color: #ccc;
}
.docs{
  font-size: .72rem;
  margin-top: 8px;
  color: #a9a9a9;
  display: flex;
}
.docs text{
  display: block;
  margin: 0 2px;
}

.position-item-right{
  text-align: right;
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  justify-content: space-between;
}
.position-item-right text{
  width: 100%;
}
.position-salary{
  font-size: .75rem;
  color: red;
}
.position-time{
  font-size: .6rem;
  color: #ccc;
}